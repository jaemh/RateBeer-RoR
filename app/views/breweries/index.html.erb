<p id="notice"><%= notice %></p>

<h1>Breweries</h1>

<h2>Active</h2>

<p> Number of breweries: <%= @breweries.count %> </p>
<p> Listing breweries </p>

<table class="table table-bordred table-striped">
 
        <thead>
          <tr>
            <th>Name</th>
            <th>Year</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @breweries.each do |brewery| %>
            <tr>
              <td><%= link_to brewery.name, brewery %></td>
              <td><%= brewery.year %></td>
              <td><%= link_to 'Edit', edit_brewery_path(brewery) if current_user %>
                    <span class="glyphicon glyphicon-edit"></span></td>
              <td><%= link_to 'Destroy', brewery, method: :delete, data: { confirm: 'Are you sure?' } if current_user %></td>
            </tr>
          <% end %>
        </tbody>
      </div>
    </div>
  </div>
</table>

<h2>Retired</h2>

<p> Number of retired breweries: <%= @retired_breweries.count %> </p>

<table class="table table-bordred table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Year</th>
  </tr>
  </thead>

  <tbody>
  <% @retired_breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
        <td></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
<p> <%= link_to 'List of beers', beers_path %> </p>

<%= link_to('New Brewery', new_brewery_path, class:'btn btn-primary') if current_user %>
